<?xml version="1.0"?>
<ruleset name="Logics Template">
    <description>Coding standard for Logics Template Application</description>
    
    <!-- Include the whole project -->
    <file>app</file>
    
    <!-- Exclude views and config files -->
    <exclude-pattern>app/views</exclude-pattern>
    <exclude-pattern>app/config</exclude-pattern>
    
    <!-- Use PSR-12 standard -->
    <rule ref="PSR12"/>
    
    <!-- Additional rules -->
    <rule ref="Generic.Commenting.DocComment"/>
    <rule ref="Generic.WhiteSpace.DisallowTabIndent"/>
    <rule ref="Generic.Files.LineEndings"/>
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="140"/>
        </properties>
    </rule>
    
    <!-- Show progress -->
    <arg name="colors"/>
    <arg name="parallel" value="80"/>
    
    <!-- Generate reports -->
    <arg name="report" value="full"/>
    <arg name="report" value="checkstyle" value="phpcs-report.xml"/>
</ruleset>
