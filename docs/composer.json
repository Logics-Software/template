{
  "name": "logics/php-mvc-template",
  "description": "A lightweight PHP MVC template based on Logics dashboard design",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Logics Team",
      "email": "info@logics.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-session": "*"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/"
    }
  },
  "scripts": {
    "migrate": "php database/migrate.php",
    "seed": "php database/seed.php"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
